@section Scripts {
    <script>
        function toggleChart(chartId) {
            const charts = {
                'ChartIncome': { chart: 'ChartIncome', button: 'btnIncome' },
                'ChartExpen': { chart: 'ChartExpen', button: 'btnExpen' },
                'list-income': { chart: 'list-income', button: 'btnIncome' },
                'list-expen': { chart: 'list-expen', button: 'btnExpen' }
            };

            for (const [key, { chart, button }] of Object.entries(charts)) {
                const chartElement = document.getElementById(chart);
                const buttonElement = document.getElementById(button);

                if (chartId === chart) {
                    chartElement.style.display = 'block';
                    buttonElement.classList.add('active');
                } else {
                    chartElement.style.display = 'none';
                    buttonElement.classList.remove('active');
                }
            }
        }

        // Initialize the charts
        new Chart(document.getElementById('ChartIncome'), {
            type: 'doughnut',
            data: {
                labels: ['รายรับแน่นอน', 'รายรับไม่แน่นอน'],
                datasets: [{
                    label: 'รายรับ',
                    data: [15000, 2500],
                    borderWidth: 1,
                    backgroundColor: [
                        'rgba(180, 226, 244, 1)', // Blue
                        'rgba(5, 101, 139, 1)'  // Cyan
                    ]
                }]
            }
        });

        new Chart(document.getElementById('ChartExpen'), {
            type: 'doughnut',
            data: {
                labels: ['รายจ่ายจำเป็น', 'รายจ่ายไม่จำเป็น'],
                datasets: [{
                    label: 'รายจ่าย',
                    data: [5000, 10000],
                    borderWidth: 1,
                    backgroundColor: [
                        'rgba(248, 237, 117, 1)', // Red
                        'rgba(245, 108, 108, 1)'  // Yellow
                    ]
                }]
            }
        });
    </script>
