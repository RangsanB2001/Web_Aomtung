@{
    ViewData["Title"] = "Verify Phone";
}

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <img src="~/logo/LogoAomtung.svg" alt="Logo" width="290">
            </div>
            <form asp-action="GanerateOTP" asp-controller="Home" method="post">
                <div class="form-group mb-3">
                    <div class="d-flex justify-content-start">
                        <label for="phoneInput" class="form-label">ระบุหมายเลขโทรศัพท์</label>
                    </div>
                    <div class="input-group">
                        <input type="tel" id="phoneInput" class="form-control input-phone-regis" name="Phone" inputmode="numeric" pattern="[0-9]*" maxlength="10" placeholder="063xxxxxxx" aria-label="Phone" required>
                    </div>
                    <div class="d-flex justify-content-center">
                        <span id="ErrorMessage" class="text-danger mt-2"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="d-flex justify-content-center">
                        <button id="btn-summit" class="btn btn-pink summit-phone w-100" type="submit" disabled>ยืนยัน</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var numberModuleRegis = initializePhoneNumberValidation("phoneInput", "ErrorMessage", "btn-summit", function () { });
            numberModuleRegis.init();
        });
    </script>
}